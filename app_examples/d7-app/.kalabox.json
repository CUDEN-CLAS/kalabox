{
  "title": "Drupal 7 App",
  "name": "d7-app",
  "plugins": {
    "d7": {},
    "rsync": {
      "src": "./",
      "volume": "/data",
      "dest": "code",
      "recursive": true,
      "exclude": ["settings.php", "files"],
      "deleteAll": true
    }
  },
  "components": {
    "data": {
      "image": {
        "name": "kalabox/data-d7",
        "build": true,
        "src": "dockerfiles/kalabox/data-d7"
      }
    },
    "db": {
      "image": {
        "name": "kalabox/mariadb",
        "build": true,
        "src": "dockerfiles/kalabox/mariadb"
      }
    },
    "php": {
      "image": {
        "name": "kalabox/php-fpm",
        "build": true,
        "src": "dockerfiles/kalabox/php-fpm"
      }
    },
    "web": {
      "image": {
        "name": "kalabox/nginx",
        "build": true,
        "src": "dockerfiles/kalabox/nginx"
      },
      "proxy": [
        {
          "port": "80/tcp",
          "default": true
        }
      ]
    }
  }
}
